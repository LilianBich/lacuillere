
<div id="wrapper">
  <h1 style="width:100%; text-align:center;">Create</h1>
  <%= form_for ([@restaurant, @review]) do |f| %>
    <%= f.label :content %>
    <%= f.text_field :content, class: "form-control" %>
    <%  # text_area(:restaurant, :content, cols: 107, rows: 10) %>
    <%= f.label :rating %>
    <%= f.select :rating, [["1", 1], ["2", 1], ["3", 3], ["4", 4], ["5", 5]] %>
    <br>
    <div class="text-center">
      <%= f.submit 'All good', class: "text-center btn btn-success" %>
    </div>
  <% end %>
  <br>
  <%= link_to "<= cancel", restaurant_path(@restaurant) %>
</div>